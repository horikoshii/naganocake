<div class="container">
 <div class="row">
  <div class="col-lg-12">
   <table class="table table-striped">
    <tr>
     <td><h4>商品一覧</h4></td>
     <td>
     <%= link_to new_admin_item_path do %>
     <i class="fa-solid fa-circle-plus"><span>new</span></i>
     <% end %>
     </td>
    </tr>
   </table>
  </div>
 </div>
 <div class="row">
  <table class="table table-striped">
   <thead>
    <tr>
     <th>商品id</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
   </thead>

   <tbody>
    <% @items.each do |item| %>
     <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
       <% if item.is_active %>
       <p>販売中</p>
       <% else %>
       <p>販売停止中</p>
       <% end %>
      </td>
     </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>