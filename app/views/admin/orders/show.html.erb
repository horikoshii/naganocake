<h2>注文履歴詳細</h2>

<div>
  <strong>購入者</strong>
  <p><%= customer.full_name %></p>
</div>

<div>
  <strong>注文日</strong>
  <p><%= order.created_at.strftime('%Y/%m/%d') %></p>
</div>

<div>
  <strong>配送先</strong>
  <p><%= orders.address %></p>
</div>

<div>
  <strong>支払方法</strong>
  <p><%= orders.payment_method %></p>
</div>

<div>
  <strong>注文ステータス</strong>
  <p></p>
</div>

<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td>製作ステータス</td>
    </tr>
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order_detail.name %></td>
      <td><%= item.with_tax_price %></td>
      <td><%= order_details.amount %></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>