<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4><strong>会員一覧</strong></h4>
    </div>
  </div>
  <div class="col-lg-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <td>会員ID</td>
          <td>氏名</td>
          <td>メールアドレス</td>
          <td>ステータス</td>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to customer.last_name, admin_customer_path(customer.id) %>
            <%= link_to customer.first_name, admin_customer_path(customer.id) %>
          </td>
          <td><%= customer.email%></td>
          <td>
           <% if customer.is_deleted %>
           <p>退会</p>
           <% else %>
           <p>有効</p>
           <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>