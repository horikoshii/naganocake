<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <td>購入日時</td>
            <td>購入者</td>
            <td>注文個数</td>
            <td>注文ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %> </td>
            <td><%= order.customer.full_name %></td>
            <% @sum = 0 %>
            <td>
            <% order.order_details.each do |detail| %>
            <% @sum += detail.amount.to_i %>
            <% end %>
            <%= @sum %>
            </td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>