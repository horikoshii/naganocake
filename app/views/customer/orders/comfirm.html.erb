<div class="container">
 <h4>注文情報確認</h4>
 <div class="row">
   <div class="col-lg-8">
    <table class="table table-striped">
     <thead>
     <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
     </tr>
    </thead>
    <tbody>
     <% @cart_items.each do |cart_item| %>
     <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
     </tr>
     <% end %>
    </tbody>
    </table>
   </div>
 </div>
</div>