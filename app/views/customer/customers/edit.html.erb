<div class="container">
 <div style="text-align:center;">
   <div class="row">
     <div class="col-lg-12"><h4>会員情報編集</h4></div>
   </div>
  <%= form_with model: @customer, url:customer_path(@customer.id),method: :PATCH do |f| %>
   <div class="row">
    <div class="col-lg-4">氏名</div>
    <div class="col-lg-4"><%= f.text_field :last_name %></div>
    <div class="col-lg-4"><%= f.text_field :first_name %></div>
   </div>

   <div class="row">
    <div class="col-lg-4">フリガナ</div>
    <div class="col-lg-4"><%= f.text_field :last_name_kana %></div>
    <div class="col-lg-4"><%= f.text_field :first_name_kana %></div>
   </div>

   <div class="row">
    <div class="col-lg-4">郵便番号</div>
    <div class="col-lg-4"><%= f.text_field :postal_code %></div>
   </div>

   <div class="row">
    <div class="col-lg-4">住所</div>
    <div class="col-lg-4"><%= f.text_field :address %></div>
   </div>

   <div class="row">
    <div class="col-lg-4">電話番号</div>
    <div class="col-lg-4"><%= f.text_field :telephone_number %></div>
   </div>

   <div class="row">
    <div class="col-lg-4">メールアドレス</div>
    <div class="col-lg-4"><%= f.text_field :email %></div>
   </div>

   <%= f.submit '編集内容をを保存',class: "btn btn-secondary" %>

   <%= link_to "退会", customers_unsubscribe_path,class: "btn btn-secondary" %>

  <% end %>
  </div>
 </div>
</div>