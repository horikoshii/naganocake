<div class="container">
 <div class="row">
  <div class="col-lg-12"><h4>マイページ</h4></div>
 </div>
 <div class="row">
  <div class="col-lg-8">
   <strong>登録情報</strong>
  </div>
  <div class="col-lg-4">
   <%= button_to "編集する", edit_customer_path(@customer.id),method: :get %>
  </div>
  <div class="col-lg-12">
   <div style="text-align:center;">
    <table class="table table-striped">
     <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
     </tr>
     <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
     </tr>
     <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
     </tr>
     <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
     </tr>
     <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
     </tr>
     <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
     </tr>
    </table>
   </div>
  </div>
 </div>
 <div class="row">
    <div class="col-lg-2"><strong>配送先</strong></div>
    <div class="col-lg-2"><%= button_to "一覧を見る",addresses_path,method: :get %></div>
 </div>
 <div class="row">
   <div class="col-lg-2"><strong>注文履歴</strong></div>
   <div class="col-lg-2"><%= button_to "一覧を見る",orders_path,method: :get %></div>
 </div>
</div>