<div class="container">
 <div style="text-align:center;">
   <div class="row">
     <div class="col-lg-12"><h4>配送先編集</h4></div>
     <%= form_with model: @address, url:addresses_path,method: :POST do |f| %>
   </div>
   <div class="row">
    <div class="col-lg-4">郵便番号（ハイフンなし）</div>
    <div class="col-lg-8"><%= f.text_field :postal_code %></div>
   </div>
   <div class="row">
    <div class="col-lg-4">住所</div>
    <div class="col-lg-8"><%= f.text_field :address %></div>
   </div>
   <div class="row">
    <div class="col-lg-4">宛名</div>
    <div class="col-lg-4"><%= f.text_field :name %></div>
    <div class="col-lg-4"><%= f.submit '変更内容を保存',class: "btn btn-secondary" %></div>
   </div>
  <% end %>
 </div>
</div>