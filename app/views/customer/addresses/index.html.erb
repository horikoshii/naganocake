<div class="container">
  <div class="row">
    <div class="col-lg-12"><h4>配送先登録/一覧</h4></div>
  </div>
  <%= form_with model: @address, url: addresses_path,method: :POST do |f| %>

   <div class="row">
    <div class="col-lg-4">郵便番号（ハイフンなし）</div>
    <div class="col-lg-8"><%= f.text_field :postal_code %></div>
   </div>
   <div class="row">
    <div class="col-lg-4">住所</div>
    <div class="col-lg-8"><%= f.text_field :address %></div>
   </div>
   <div class="row">
    <div class="col-lg-4">宛名</div>
    <div class="col-lg-4"><%= f.text_field :name %></div>
    <div class="col-lg-4"><%= f.submit '新規登録',class: "btn btn-secondary" %></div>
   </div>
  <% end %>

  <div class="row">
    <table class="table table-striped">
      <div class="col-lg-6">
        <thead>
          <td>郵便番号</td>
          <td>住所</td>
          <td>宛名</td>
          <td></td>
        </thead>
      </div>
      <div class="col-lg-6">
        <% @addresses.each do |address| %>
       <tbody>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= button_to "編集", edit_address_path(address),method: :patch %>
          <%= button_to "削除", address_path(address),method: :delete %>
        </td>
        <% end %>
       </tbody>
      </div>
    </table>
  </div>
</div>